float base (0.0);
float heigh (0.0);
area= base*area/2;

cout << "Digite area do triangulo e press Enter";
cin << area;
cout << "Digite base do triangulo e press Enter";
cin << base;
cout<< "Digite altura do triangulo e press Enter";
cin << heigh;

printf ("A area do triangulo sera %f", area);


